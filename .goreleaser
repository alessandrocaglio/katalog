project_name: katalog

before:
  hooks:
    - go mod tidy
    - go test ./...

builds:
  - id: katalog
    binary: katalog
    env:
      - CGO_ENABLED=0
    goos:
      - linux
    goarch:
      - amd64
      - arm64
    ldflags:
      - -s -w

archives:
  - builds:
      - katalog
    format_overrides:
      - goos: windows
        format: zip

checksum:
  name_template: "checksums.txt"

release:
  github:
    owner: alessandrocaglio
    name: katalog

# -----------------------------
# Docker images
# -----------------------------
dockers:
  - image_templates:
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:{{ .Tag }}-amd64"
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:latest-amd64"
    goarch: amd64
    dockerfile: Dockerfile

  - image_templates:
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:{{ .Tag }}-arm64"
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:latest-arm64"
    goarch: arm64
    dockerfile: Dockerfile

docker_manifests:
  - name_template: "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:{{ .Tag }}"
    image_templates:
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:{{ .Tag }}-amd64"
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:{{ .Tag }}-arm64"

  - name_template: "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:latest"
    image_templates:
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:latest-amd64"
      - "quay.io/{{ .Env.QUAY_USERNAME }}/katalog:latest-arm64"
