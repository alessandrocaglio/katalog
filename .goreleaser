project_name: katalog

before:
  hooks:
    - go mod tidy
    - go test ./...

builds:
  - id: katalog
    binary: katalog
    env:
      - CGO_ENABLED=0
    goos:
      - linux
      - darwin
      - windows
    goarch:
      - amd64
      - arm64
    ldflags:
      - -s -w

archives:
  - id: default
    builds:
      - katalog
    format_overrides:
      - goos: windows
        format: zip

checksum:
  name_template: "checksums.txt"

release:
  github:
    owner: alessandrocaglio
    name: katalog

changelog:
  sort: asc
  filters:
    exclude:
      - "^docs:"
      - "^test:"
